<%= form_for(@top_level, :builder => StarsFormBuilder, :html => {:multipart => true}) do |f| %>
  <% if @top_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@top_level.errors.count, "error") %> prohibited this top_level from being saved:</h2>

      <ul>
      <% @top_level.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :lang %>
      <br/>
      <%= f.collection_select(:lang, Language.collection, :cut, :name, :value => I18n.locale, :prompt => false) %>
    </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :item_order %><br />
    <%= f.number_field :item_order %>
  </div>
  <div class="field">
    <%= f.label :short_url %><br />
    <%= f.text_field :short_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script language="javascript">
    $(document).ready(function () {
        $("#top_level_description").markItUp(mySettings);
    })
</script>
