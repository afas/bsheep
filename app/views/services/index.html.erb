<h1>Listing services</h1>

<table>
  <tr>
    <th>Lang</th>
    <th>Title</th>
    <th>Description</th>
    <th>Seo data</th>
    <th>Item order</th>
    <th>User</th>
    <th>Short url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.lang %></td>
    <td><%= service.title %></td>
    <td><%= service.description %></td>
    <td><%= service.seo_data_id %></td>
    <td><%= service.item_order %></td>
    <td><%= service.user_id %></td>
    <td><%= service.short_url %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

