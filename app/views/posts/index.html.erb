<h1>Listing posts</h1>

<table>
  <tr>
    <th>Lang</th>
    <th>Title</th>
    <th>Description</th>
    <th>Full text</th>
    <th>Sign board text</th>
    <th>Seo data</th>
    <th>User</th>
    <th>Short url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.lang %></td>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.full_text %></td>
    <td><%= post.sign_board_text %></td>
    <td><%= post.seo_data_id %></td>
    <td><%= post.user_id %></td>
    <td><%= post.short_url %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

